{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2018",
    "lib": ["ES2018"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "src/tests/db.spec.ts", "src/tests"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}